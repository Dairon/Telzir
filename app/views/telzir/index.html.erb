
<%= form_with method: :post, url: telzir_result_path do |form| %>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-dark table-hover">
                <tr>
                    <th scope="col">Origem</th>
                    <th scope="col">Destino</th>
                    <th scope="col">Tempo</th>
                    <th scope="col">Plano</th>
                </tr>
                <tr>
                    <td scope="row"><%= form.number_field :origin, class:"form-control", placeholder:"000", max:"999", required:true %></td>
                    <td scope="row"><%= form.number_field :destination, class:"form-control", placeholder:"000", max:"999", required:true %></td>
                    <td scope="row"><%= form.number_field :time, class:"form-control", placeholder:"minutos", required:true %></td>
                    <td scope="row"><%= select_tag(:plan, options_for_select( @plans, 1), {class:"form-control" }) %>
                    </td>
                </tr>
        </table>
    <%= form.submit "Confirmar", class:"btn btn-primary btn-salvar btn-dark" %>
        </div>
<% end %>
